---
import '../styles/global.css'
import '../styles/highlight.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <nav>
      <a href={import.meta.env.BASE_URL}>Home</a>
    </nav>
    <slot />
  </body>
</html>
